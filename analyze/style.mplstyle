# Figure
figure.figsize: 8, 3
figure.dpi: 100
# Layout
figure.constrained_layout.use: true
figure.constrained_layout.w_pad: 0.1
figure.constrained_layout.h_pad: 0.1
# Fontsizes
font.size: 12
xtick.labelsize: 12
ytick.labelsize: 12
legend.fontsize: 12
legend.title_fontsize: 12
axes.titlesize: 12
axes.labelsize: 12
# Misc
axes.formatter.use_locale: True
